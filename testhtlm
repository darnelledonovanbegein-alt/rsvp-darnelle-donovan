      },
      en: {
        title: "RSVP ‚Äî Darnelle & Donovan",
        subtitle: "Thank you for confirming your attendance at our wedding",
        labelName: "Enter your full name:",
        labelEmail: "Email (optional):",
        sendBtn: "Send",
        confirmQuestion: "Do you confirm your attendance?",
        yesBtn: "YES, I will attend",
        noBtn: "NO, unfortunately I won‚Äôt",
        labelWish: "Leave a message for the couple:",
        pdfBtn: "üìÑ Download my reservation card",
        confirmBtn: "Confirm my response",
        popupYes: "Thank you for your confirmation! We look forward to seeing you.",
        popupNo: "Thank you, we have noted that you cannot attend.",
        popupSent: "Your response has been recorded, thank you!"
      }
    };

    let lang = navigator.language.startsWith("en") ? "en" : "fr";
    function applyTranslations() {
      document.getElementById("title").textContent = translations[lang].title;
      document.getElementById("subtitle").textContent = translations[lang].subtitle;
      document.getElementById("label-name").textContent = translations[lang].labelName;
      document.getElementById("label-email").textContent = translations[lang].labelEmail;
      document.getElementById("send-btn").textContent = translations[lang].sendBtn;
      document.getElementById("confirm-question").textContent = translations[lang].confirmQuestion;
      document.getElementById("yes-btn").textContent = translations[lang].yesBtn;
      document.getElementById("no-btn").textContent = translations[lang].noBtn;
      document.getElementById("label-wish").textContent = translations[lang].labelWish;
      document.getElementById("pdf-btn").textContent = translations[lang].pdfBtn;
      document.getElementById("confirm-btn").textContent = translations[lang].confirmBtn;
      document.getElementById("switch-lang").textContent = lang === "fr" ? "EN" : "FR";
    }
    applyTranslations();

    document.getElementById("switch-lang").onclick = function() {
      lang = lang === "fr" ? "en" : "fr";
      applyTranslations();
    };

    // Liste des invit√©s (Isaac test & admeus test ajout√©s)
    const guests = [
      {name:"Moraima Lys Colimon", seats:1, family:["Moraima Lys Colimon"]},
