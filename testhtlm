      {name:"Marjorie Dimanche", seats:4, family:["Marjorie","Winston","Nathaniel","Aniel"]},
      {name:"Emmanuella Moyo", seats:2, family:["Christian Moyo","Emmanuella Moyo"]},
      {name:"Yoletta Duthil", seats:1, family:["Yoletta Duthil"]},
      {name:"Claire Johnson", seats:1, family:["Claire Johnson"]},
      {name:"Tatie Myrlande", seats:1, family:["Tatie Myrlande"]},
      {name:"Isaac test", seats:1, family:["Isaac test"]},
      {name:"admeus test", seats:1, family:["admeus test"]}
    ];
    const guestNames = guests.map(g => g.name);

    // Autocomplete
    const nameInput = document.getElementById("name");
    const nameSuggestions = document.getElementById("name-suggestions");
    nameInput.addEventListener("input", function() {
      const val = this.value.toLowerCase();
      nameSuggestions.innerHTML = "";
      guestNames.filter(n => n.toLowerCase().includes(val)).forEach(n => {
        const opt = document.createElement("option");
        opt.value = n;
        nameSuggestions.appendChild(opt);
      });
    });

    let currentGuest = null;
    let attendanceStatus = null;

    // Form submit (v√©rif. invit√©)
    document.getElementById("rsvp-form").addEventListener("submit", function(e) {
      e.preventDefault();
      const input = nameInput.value.trim();
      const email = document.getElementById("email").value.trim();
      const result = document.getElementById("result");
      const confirmBox = document.getElementById("confirm");
      const wishForm = document.getElementById("wish-form");
      result.classList.add("hidden");
      confirmBox.classList.add("hidden");
      wishForm.classList.add("hidden");

      if (!input) {
        alert(lang === "fr" ? "Veuillez entrer un nom." : "Please enter a name.");
        return;
      }
      // Recherche flexible
      const found = guests.find(g => input.toLowerCase().includes(g.name.toLowerCase()) || g.name.toLowerCase().includes(input.toLowerCase()));
      if (found) {
        currentGuest = found;
        let familyHtml = "";
        if (found.family.length > 1) {
          familyHtml = (lang === "fr" ? "Famille" : "Family") + ": <ul class='family-list'>" + found.family.map(m => `<li>${m}</li>`).join("") + "</ul>";
        }
        result.innerHTML = `<strong>${found.name}</strong><br>
          ${lang === "fr" ? "Nombre de si√®ges" : "Seats reserved"}: ${found.seats}<br>${familyHtml}`;
        result.classList.remove("hidden");
        confirmBox.classList.remove("hidden");
      } else {
        result.innerHTML = lang === "fr" ? "‚ö†Ô∏è D√©sol√©, ce nom n'est pas dans la liste des invit√©s." : "‚ö†Ô∏è Sorry, this name is not on the guest list.";
        result.classList.remove("hidden");
      }
    });

    document.getElementById("yes-btn").onclick = function() {
      attendanceStatus = lang === "fr" ? "Pr√©sent" : "Attending";
      document.getElementById("wish-form").classList.remove("hidden");
      showPopup(translations[lang].popupYes);
    };

    document.getElementById("no-btn").onclick = function() {
      attendanceStatus = lang === "fr" ? "Absent" : "Not attending";
      document.getElementById("wish-form").classList.remove("hidden");
      showPopup(translations[lang].popupNo);
    };

    // PDF
    document.getElementById("pdf-btn").onclick = function() {
      if (!currentGuest) return;
      const wish = document.getElementById("wish").value;
      const doc = new jsPDF();
      const green = [107,123,89];
      const burgundy = [96,12,12];
      doc.setFillColor(...burgundy);
      doc.rect(0,0,210,40,"F");
      doc.setFontSize(22);
      doc.setTextColor(255,255,255);
      doc.text("Darnelle & Donovan", 105, 25, {align:"center"});
      doc.setTextColor(...burgundy);
      doc.setFontSize(18);
      doc.text(lang === "fr" ? "Carte de R√©servation" : "Reservation Card", 105, 60, {align:"center"});
      doc.setFontSize(14);
      doc.setTextColor(0,0,0);
      doc.text(`${lang === "fr" ? "Invit√©" : "Guest"} : ${currentGuest.name}`, 20, 80);
      doc.text(`${lang === "fr" ? "Nombre de si√®ges" : "Seats reserved"} : ${currentGuest.seats}`, 20, 95);
      if (currentGuest.family.length > 1) {
        doc.text(lang === "fr" ? "Famille :" : "Family:", 20, 110);
        currentGuest.family.forEach((m,i) => {
          doc.text(`- ${m}`, 30, 120 + i*10);
        });
      }
      if (wish.trim() !== "") {
        doc.setTextColor(...green);
        doc.text(lang === "fr" ? "Message de v≈ìux :" : "Message:", 20, 200);
        doc.setTextColor(0,0,0);
        doc.setFontSize(12);
        doc.text(wish, 20, 210, {maxWidth:170});
      }
      doc.save(`Reservation_${currentGuest.name}.pdf`);
    };

    // Confirmation (envoi Formspree)
    document.getElementById("wish-form").onsubmit = function(e) {
      e.preventDefault();
      if (!currentGuest) return;
      // Remplir le formulaire cach√©
      const hiddenForm = document.getElementById("hidden-form");
      hiddenForm.elements["name"].value = currentGuest.name;
      hiddenForm.elements["email"].value = document.getElementById("email").value;
      hiddenForm.elements["attendance"].value = attendanceStatus;
      hiddenForm.elements["wish"].value = document.getElementById("wish").value;
      // Soumission AJAX
      fetch(hiddenForm.action, {
        method: "POST",
        headers: { "Accept": "application/json" },
        body: new FormData(hiddenForm)
      }).then(r => {
        showPopup(translations[lang].popupSent);
        document.getElementById("wish-form").classList.add("hidden");
        currentGuest = null;
        attendanceStatus = null;
        document.getElementById("rsvp-form").reset();
        document.getElementById("wish-form").reset();
      });
    };

    // Popup logic
    function showPopup(message) {
      document.getElementById("popup-message").textContent = message;
      document.getElementById("overlay").style.display = "block";
      document.getElementById("popup").style.display = "block";
      document.getElementById("close-popup").focus();
    }
    document.getElementById("close-popup").onclick = function() {
      document.getElementById("overlay").style.display = "none";
      document.getElementById("popup").style.display = "none";
    };
    document.addEventListener("keydown", function(e) {
      if (e.key === "Escape" && document.getElementById("popup").style.display === "block") {
        document.getElementById("overlay").style.display = "none";
        document.getElementById("popup").style.display = "none";
      }
    });
  </script>
</body>
